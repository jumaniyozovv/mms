generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  MANAGER
  USER
}

enum DayOffType {
  PAID
  SICK
  PERSONAL
}

enum DayOffStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  phone     String  @map("phone")
  role      UserRole @default(USER)
  paidDaysOff     Int @default(15) @map("paid_days_off")
  sickDaysOff     Int @default(5) @map("sick_days_off")
  personalDaysOff Int @default(10) @map("personal_days_off")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  dayOffs         DayOff[] @relation("UserDayOffs")
  approvedDayOffs DayOff[] @relation("ApprovedDayOffs")

  @@map("users")
}

model DayOffConfig {
  id              String @id @default(cuid())
  paidDaysOff     Int    @default(15) @map("paid_days_off")
  sickDaysOff     Int    @default(5) @map("sick_days_off")
  personalDaysOff Int    @default(10) @map("personal_days_off")

  @@map("day_off_config")
}

model DayOff {
  id           String       @id @default(cuid())
  userId       String       @map("user_id")
  type         DayOffType
  status       DayOffStatus @default(PENDING)
  startDate    DateTime     @map("start_date")
  endDate      DateTime     @map("end_date")
  reason       String?
  createdAt    DateTime     @default(now()) @map("created_at")
  approvedAt   DateTime?    @map("approved_at")
  approvedById String?      @map("approved_by_id")

  user       User  @relation("UserDayOffs", fields: [userId], references: [id], onDelete: Cascade)
  approvedBy User? @relation("ApprovedDayOffs", fields: [approvedById], references: [id], onDelete: SetNull)

  @@map("day_offs")
}

model Holiday {
  id        String   @id @default(cuid())
  name      String
  date      DateTime
  recurring Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("holidays")
}
